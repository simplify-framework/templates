{
  "name": "{{NameSnake}}",
  "version": "0.1.0",
  "description": "Simplify graphql-serverless architecture model (GSAM)",
  "main": "app.js",
  "scripts": {
    "push-update": "node server-push.js --ops update",
    "push-code": "env SERVER_SOURCE=build node function-push.js",
    "build-code": "webpack -p --config webpack.config.js",
    "push-layer": "env LAYER_SOURCE=layer node layer-push.js",
    "build-layer": "webpack -p --config webpack.config.layer.js",
    "push-deps": "env LAYER_SOURCE=deps env DEPENDENCIES_PACKAGE={{NameSnake}}-deps node layer-push.js",
    "build-deps": "[ -d deps/nodejs ] || mkdir -p deps/nodejs && cp package.json deps/nodejs/package.json && cd deps/nodejs && npm install --only=production",
    "start": "npm install && env LOCAL_DEBUG=YES DEPLOYMENT_STAGE=latest node app.js",
    "code-scan": "bash sonarqube-scanner.sh"
  },
  "keywords": [
    "graphql",
    "lambda",
    "faas",
    "aws"
  ],
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/node": "^7.7.4",
    "@babel/preset-env": "^7.9.6",
    "@babel/register": "^7.9.0",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "babel-loader": "^8.1.0",
    "file-loader": "^6.0.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2",
    "simplify-sdk": "^0.1.11"
  },
  "dependencies": {
    "aws-serverless-express": "^3.3.8",
    "apollo-server": "^2.13.1",
    "simplify-sdk": "^0.1.11",
    "graphql": "^15.0.0",
    "uuid": "^8.1.0"
  }
}
