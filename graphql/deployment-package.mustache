{
    "name": "{{PROJECT_NameSnake}}",
    "version": "{{PROJECT_Version}}",
    "description": "{{{PROJECT_Desc}}}",
    "scripts": {
        "generate-{{ENV_NameSnake}}": "simplify-graphql -i schema.graphql --env {{ENV_NameSnake}}",
        "stack-deploy": "env DEPLOYMENT_ENV={{ENV_NameSnake}} node .simplify-graphql/deployment.js --input deployment-input.json",
        "stack-destroy": "env DEPLOYMENT_ENV={{ENV_NameSnake}} node .simplify-graphql/deployment.js --input deployment-input.json --deletion",
        "push-config": "bash .simplify-graphql/code-push.sh .env config",
        "push-code": "bash .simplify-graphql/code-push.sh .env push",
        "account-setup": "bash .simplify-graphql/setup.sh --profile {{PROJECT_Profile}}",
        "account-update": "bash .simplify-graphql/update.sh --profile {{PROJECT_Profile}}",
        "account-cleanup": "bash .simplify-graphql/cleanup.sh --profile {{PROJECT_Profile}}",
        "monitor-metric": "node node_modules/simplify-secops/entrypoint.js -p {{ENV_Profile}} -i .simplify-graphql/{{ENV_NameSnake}}/functions.csv metric -h 24 -t 300",
        "security-check": "node node_modules/simplify-secops/entrypoint.js -p {{ENV_Profile}} -i .simplify-graphql/{{ENV_NameSnake}}/functions.csv verify",
        "monitor-config": "node node_modules/simplify-secops/entrypoint.js -p {{ENV_Profile}} -i .simplify-graphql/{{ENV_NameSnake}}/functions.csv verify -e",
        "security-patch": "node node_modules/simplify-secops/entrypoint.js -p {{ENV_Profile}} -i .simplify-graphql/{{ENV_NameSnake}}/functions.csv patch",
        "take-snapshot": "node node_modules/simplify-secops/entrypoint.js -p {{ENV_Profile}} -i .simplify-graphql/{{ENV_NameSnake}}/functions.csv snapshot"
    },
    "license": "MIT",
    "private": true,
    "devDependencies": {
        "simplify-sdk": "^0.1.27",
        "simplify-secops": "^0.1.5"
    }
}
